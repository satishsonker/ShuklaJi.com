
@{
    ViewData["Title"] = "Application Setting";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/js/Area/Admin/AppSetting/AppSetting.js"></script>
<link href="~/css/Area/Admin/AppSetting/AppSetting.css" rel="stylesheet" />
<div class="breadcrumb-data-1">
    <div class="row">
        <div class="col-md-6 col-5">
            <div class="breadcrumb-data-3">
                <h3 _ngcontent-hai-c46="">Application Setting</h3>
            </div>
        </div>
        <div class="col-md-6 col-7">
            <div class="breadcrumb-data-2 d-none d-sm-block">
                <ul>
                    <li><a>Home</a></li>
                    <li><span>/</span></li>
                    <li><p>App Setting</p></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="data-container">
    <div class="inner-container">
        <form id="frmAddAppSetting" enctype="multipart/form-data" method="post">
            <div class="form">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-4">
                        <div class="pix-holder">
                            <img src="" id="imgLogo" />
                            <input type="file" hidden="hidden" id="fileLogo" />
                            <div class="pix-control-panel">
                                <ul>
                                    <li title="Change logo" onclick="openPixBrowser()"><i class="la la-camera onhover"></i> </li>
                                    <li title="Remove logo"><i class="la la-times onhover removeLogo"></i> </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-8">
                        <div class="custom-form">
                            <div class="dx-fieldset">
                                <div class="dx-field">
                                    <div class="dx-field-label">Application Name</div>
                                    <div class="dx-field-value">
                                        <div id="txtAppName"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="dx-fieldset">
                                <div class="dx-field">
                                    <div class="dx-field-label">Default Password</div>
                                    <div class="dx-field-value">
                                        <div id="txtDefaultPassword"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Reset Link Validity</div>
                                <div class="dx-field-value">
                                    <div id="numResetLinkValidity"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label"></div>
                                <div class="dx-field-value">
                                    <div id="btnSave"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>

                </div>
            </div>
            <div class="summary-container" id="summary-container">
                <div class="summary-container-inner">
                    <div class="summary-header">
                        <h5>Validation Summary</h5>
                        <i class="la la-times" id="iclose" title="Close" data-close="summary-container"></i>
                    </div>
                    <div class="summary-body">
                        <div id="summary"></div>
                    </div>
                    <div class="summary-footer"></div>
                </div>
            </div>
        </form>
    </div>
</div>


