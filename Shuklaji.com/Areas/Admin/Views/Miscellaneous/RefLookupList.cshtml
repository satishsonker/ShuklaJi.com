<div class="data-container">
    <div class="inner-container">
        <form id="frmRefLookup"  class="scroll-form">
            <div id="gridContainer"></div>
        </form>
    </div>
</div>

<div class="model-form">
    <div class="form-container">
        <div class="header">
            <span class="form-title">Add Reference Lookup</span>
            <span class="form-close"><i class="fas fa-times text-danger"></i></span>
        </div>
        <div class="form-body">
            <form id="frmAddRef">
                <div class="form">
                    <div class="offset-md-3 offset-sm-1 offset-lg-3 col-lg-6 col-md-6 col-sm-10">
                        <div class="custom-form">
                            <div class="dx-fieldset">
                                <div class="dx-field">
                                    <div class="dx-field-label">Key</div>
                                    <div class="dx-field-value">
                                        <div id="txtKey"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="dx-fieldset">
                                <div class="dx-field">
                                    <div class="dx-field-label">Value</div>
                                    <div class="dx-field-value">
                                        <div id="txtValue"></div>
                                        <div class="small text-success">saperate values using || symbols</div>
                                    </div>
                                </div>
                            </div>
                            <div class="dx-fieldset">
                                <div class="dx-field">
                                    <div class="dx-field-label">Remark</div>
                                    <div class="dx-field-value">
                                        <div id="txtRemark"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="dx-fieldset">
                                <div class="dx-field">
                                    <div class="dx-field-label"></div>
                                    <div class="dx-field-value">
                                        <div id="btnSave"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



