<div class="data-container">
    <div class="inner-container">
        <form id="frmAddMenu">
            <div class="form">
                <div class="offset-md-3 offset-sm-1 offset-lg-3 col-lg-6 col-md-6 col-sm-10">
                    <div class="custom-form">
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Menu Name</div>
                                <div class="dx-field-value">
                                    <div id="txtMenuName"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Menu Display Name</div>
                                <div class="dx-field-value">
                                    <div id="txtMenuDisplayName"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Position</div>
                                <div class="dx-field-value">
                                    <div id="ddlPosition"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Parent Menu</div>
                                <div class="dx-field-value">
                                    <div id="ddlParent"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Access By</div>
                                <div class="dx-field-value">
                                    <div id="ddlAccessBy"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">URL</div>
                                <div class="dx-field-value">
                                    <div id="txtUrl"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Icon Class</div>
                                <div class="dx-field-value">
                                    <div id="txtIconClass"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Icon Color</div>
                                <div class="dx-field-value">
                                    <div id="txtIconColor"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Display Order</div>
                                <div class="dx-field-value">
                                    <div id="numDisplayOrder"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label">Badge</div>
                                <div class="dx-field-value">
                                    <div id="txtBadge"></div>
                                </div>
                            </div>
                        </div>
                        <div class="dx-fieldset">
                            <div class="dx-field">
                                <div class="dx-field-label"></div>
                                <div class="dx-field-value">
                                    <div id="btnSave"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>            
        </form>
    </div>
</div>

